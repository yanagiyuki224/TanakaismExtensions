{
  "scopeName": "source.tanakaism",
  "fileTypes": [
    "tanakaism"
  ],
  "name": "Tanakaism",
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#comments"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.tanakaism",
          "match": "(変数宣言|表示|コメント|もし|違ったら|それ以外|終了)(?=\\s|$)"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.tanakaism",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.tanakaism",
          "match": "\\\\."
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.tanakaism",
          "match": "^\\s*コメント\\b.*$"
        }
      ]
    }
  }
}